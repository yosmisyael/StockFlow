                <Insets/>
            </HBox.margin>
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
        </VBox>

        <!-- RIGHT SECTION -->
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #F9FAFB;" HBox.hgrow="ALWAYS">
            <VBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="60" fitWidth="60">
                    <!--                    <Image url="@/com/oop/stockflow/view/" />-->
                </ImageView>
                <Text style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Sign In">
                    <font>
                        <Font name="SF Pro Display Regular" size="24.0"/>
                    </font>
                </Text>
                <Text style="-fx-fill: #666;" text="Enter your credentials to access your account">
                    <font>
                        <Font name="SF Pro Display Regular" size="16.0"/>
                    </font>
                </Text>
            </VBox>
            <VBox spacing="10">
                <Label text="Email Address"/>
                <TextField fx:id="emailField" promptText="john@example.com">
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </TextField>
                <Label text="Password"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password">
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </PasswordField>
                <HBox alignment="CENTER_RIGHT">
                    <Hyperlink text="Forgot password?"/>
                </HBox>
                <Button fx:id="loginButton" maxWidth="Infinity"
                        style="-fx-background-color: #1E5BE6; -fx-text-fill: white; -fx-font-weight: bold;"
