                                <SVGPath
                                        content="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"
                                        fill="#4CAF50"/>
                                <SVGPath
                                        content="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"
                                        fill="#1976D2"/>
                            </Group>
                        </graphic>
                    </Button>
                    <Button style="-fx-background-color: #fff; -fx-border-color: #ddd;" text="Microsoft">
                        <graphic>
                            <Group scaleX="0.5" scaleY="0.5">
                                <SVGPath content="M6 6H22V22H6z" fill="#ff5722"/>
                                <SVGPath content="M26 6H42V22H26z" fill="#4caf50"/>
                                <SVGPath content="M26 26H42V42H26z" fill="#ffc107"/>
                                <SVGPath content="M6 26H22V42H6z" fill="#03a9f4"/>
                            </Group>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
            <HBox alignment="CENTER">
                <Text style="-fx-fill: #666;" text="Don't have an account?"/>
                <Hyperlink text="Sign up for free" onAction="#goToRegister"/>
            </HBox>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0"/>
            </padding>
        </VBox>
    </HBox>
</AnchorPane>
