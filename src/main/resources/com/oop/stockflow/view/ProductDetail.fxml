<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="root" stylesheets="@../assets/product-detail.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.stockflow.controller.ProductShowController">

    <!-- Sidebar -->
    <left>
        <VBox styleClass="sidebar" minWidth="240" prefWidth="240" spacing="0">
            <padding>
                <Insets top="24" right="0" bottom="24" left="0" />
            </padding>

            <!-- User Profile Section -->
            <VBox alignment="CENTER" spacing="12" styleClass="sidebar-profile">
                <padding>
                    <Insets top="0" right="20" bottom="24" left="20" />
                </padding>

                <StackPane styleClass="profile-avatar">
                    <Label text="JD" styleClass="profile-initials">
                        <font>
                            <Font name="System Bold" size="24" />
                        </font>
                    </Label>
                </StackPane>

                <Label text="Warehouse Manager" styleClass="profile-role">
                    <font>
                        <Font name="System Bold" size="13" />
                    </font>
                </Label>
            </VBox>

            <!-- Navigation Menu -->
            <VBox spacing="4" styleClass="nav-menu">
                <padding>
                    <Insets top="8" right="12" bottom="12" left="12" />
                </padding>

                <!-- Transactions List -->
                <Button alignment="CENTER_LEFT" maxWidth="Infinity" styleClass="nav-button" text="≡  Transactions List" onAction="#navigateToTransactionsList">
                    <padding>
                        <Insets top="12" right="16" bottom="12" left="16" />
                    </padding>
                    <font>
                        <Font size="14" />
                    </font>
                </Button>

                <!-- Inbound Transaction -->
                <Button alignment="CENTER_LEFT" maxWidth="Infinity" styleClass="nav-button" text="↓  Inbound Transaction" onAction="#navigateToInbound">
                    <padding>
                        <Insets top="12" right="16" bottom="12" left="16" />
                    </padding>
                    <font>
                        <Font size="14" />
                    </font>
                </Button>

                <!-- Outbound Transaction -->
                <Button alignment="CENTER_LEFT" maxWidth="Infinity" styleClass="nav-button" text="↑  Outbound Transaction" onAction="#navigateToOutbound">
                    <padding>
                        <Insets top="12" right="16" bottom="12" left="16" />
                    </padding>
                    <font>
                        <Font size="14" />
                    </font>
                </Button>
            </VBox>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="content-scroll">
            <VBox styleClass="main-content" spacing="24">
                <padding>
                    <Insets top="32" right="40" bottom="40" left="40" />
                </padding>

                <!-- Header Section -->
                <HBox alignment="CENTER_LEFT">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="Product Information" styleClass="page-title">
                            <font>
                                <Font name="System Bold" size="32" />
                            </font>
                        </Label>
                        <Label text="Detailed product specifications and inventory data" styleClass="page-subtitle">
                            <font>
                                <Font size="14" />
                            </font>
                        </Label>
                    </VBox>

                    <!-- Back Button -->
                    <Button text="← Back" styleClass="back-button" onAction="#handleBack">
                        <font>
                            <Font size="14" />
                        </font>
                        <padding>
                            <Insets top="10" right="20" bottom="10" left="20" />
                        </padding>
                    </Button>
                </HBox>

                <!-- Main Grid Layout -->
                <GridPane hgap="24" vgap="24">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" />
                        <ColumnConstraints percentWidth="50" />
                    </columnConstraints>

                    <!-- Basic Information Card -->
                    <VBox spacing="20" styleClass="info-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <padding>
                            <Insets top="24" right="24" bottom="24" left="24" />
                        </padding>

                        <!-- Card Header -->
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ℹ" styleClass="card-icon, card-icon-blue">
                                <font>
                                    <Font size="18" />
                                </font>
                            </Label>
                            <Label text="Basic Information" styleClass="card-title">
                                <font>
                                    <Font name="System Bold" size="16" />
                                </font>
                            </Label>
                        </HBox>

                        <!-- SKU and Product Type Row -->
                        <GridPane hgap="20" vgap="16">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>

                            <!-- SKU -->
                            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label text="SKU" styleClass="field-label">
                                    <font>
                                        <Font size="13" />
                                    </font>
                                </Label>
                                <Label fx:id="skuLabel" text="WH-2024-001" styleClass="field-value">
                                    <font>
                                        <Font name="System Bold" size="14" />
                                    </font>
                                </Label>
                            </VBox>

                            <!-- Product Type -->
                            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label text="Product Type" styleClass="field-label">
                                    <font>
                                        <Font size="13" />
                                    </font>
                                </Label>
                                <Label fx:id="productTypeLabel" text="Electronics" styleClass="field-value">
                                    <font>
                                        <Font name="System Bold" size="14" />
                                    </font>
                                </Label>
                            </VBox>

                            <rowConstraints>
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>

                        <!-- Product Name -->
                        <VBox spacing="8">
                            <Label text="Product Name" styleClass="field-label">
                                <font>
                                    <Font size="13" />
                                </font>
                            </Label>
                            <Label fx:id="productNameLabel" text="Wireless Bluetooth Headphones Pro" styleClass="field-value">
                                <font>
                                    <Font name="System Bold" size="14" />
                                </font>
                            </Label>
                        </VBox>

                        <!-- Brand -->
                        <VBox spacing="8">
                            <Label text="Brand" styleClass="field-label">
                                <font>
                                    <Font size="13" />
                                </font>
                            </Label>
                            <Label fx:id="brandLabel" text="TechSound" styleClass="field-value">
                                <font>
                                    <Font name="System Bold" size="14" />
                                </font>
                            </Label>
                        </VBox>

                        <!-- Description -->
                        <VBox spacing="8">
                            <Label text="Description" styleClass="field-label">
                                <font>
                                    <Font size="13" />
                                </font>
                            </Label>
                            <Label fx:id="descriptionLabel" text="Premium wireless headphones with active noise cancellation, 30-hour battery life, and premium audio drivers for exceptional sound quality." styleClass="field-description" wrapText="true">
                                <font>
                                    <Font size="14" />
                                </font>
                            </Label>
                        </VBox>
                    </VBox>

                    <!-- Inventory Details Card -->
                    <VBox spacing="20" styleClass="info-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <padding>
                            <Insets top="24" right="24" bottom="24" left="24" />
                        </padding>

                        <!-- Card Header -->
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="📦" styleClass="card-icon">
                                <font>
                                    <Font size="18" />
                                </font>
                            </Label>
                            <Label text="Inventory Details" styleClass="card-title">
                                <font>
                                    <Font name="System Bold" size="16" />
                                </font>
                            </Label>
                        </HBox>

                        <!-- Inventory Grid -->
                        <GridPane hgap="20" vgap="20">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>

                            <!-- Current Quantity -->
                            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label text="Current Quantity" styleClass="field-label">
                                    <font>
                                        <Font size="13" />
                                    </font>
                                </Label>
                                <Label fx:id="currentQuantityLabel" text="247 units" styleClass="field-value, value-bold">
                                    <font>
                                        <Font name="System Bold" size="15" />
                                    </font>
                                </Label>
                            </VBox>

                            <!-- Reorder Point -->
                            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label text="Reorder Point" styleClass="field-label">
                                    <font>
                                        <Font size="13" />
                                    </font>
                                </Label>
                                <Label fx:id="reorderPointLabel" text="50 units" styleClass="field-value, value-warning">
                                    <font>
                                        <Font name="System Bold" size="15" />
                                    </font>
                                </Label>
                            </VBox>

                            <!-- Reorder Quantity -->
                            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label text="Reorder Quantity" styleClass="field-label">
                                    <font>
                                        <Font size="13" />
                                    </font>
                                </Label>
                                <Label fx:id="reorderQuantityLabel" text="200 units" styleClass="field-value, value-bold">
                                    <font>
                                        <Font name="System Bold" size="15" />
                                    </font>
                                </Label>
                            </VBox>

                            <!-- Units per Case -->
                            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <Label text="Units per Case" styleClass="field-label">
                                    <font>
                                        <Font size="13" />
                                    </font>
                                </Label>
                                <Label fx:id="unitsPerCaseLabel" text="12 units" styleClass="field-value, value-bold">
                                    <font>
                                        <Font name="System Bold" size="15" />
                                    </font>
                                </Label>
                            </VBox>

                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>

                        <!-- Purchase Price -->
                        <VBox spacing="8">
                            <Label text="Purchase Price" styleClass="field-label">
                                <font>
                                    <Font size="13" />
                                </font>
                            </Label>
                            <Label fx:id="purchasePriceLabel" text="$89.99" styleClass="price-badge">
                                <font>
                                    <Font name="System Bold" size="16" />
                                </font>
                                <padding>
                                    <Insets top="8" right="16" bottom="8" left="16" />
                                </padding>
                            </Label>
                        </VBox>
                    </VBox>

                    <!-- Physical Specifications Card -->
                    <VBox spacing="20" styleClass="info-card" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <padding>
                            <Insets top="24" right="24" bottom="24" left="24" />
                        </padding>

                        <!-- Card Header -->
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="📏" styleClass="card-icon">
                                <font>
                                    <Font size="18" />
                                </font>
                            </Label>
                            <Label text="Physical Specifications" styleClass="card-title">
                                <font>
                                    <Font name="System Bold" size="16" />
                                </font>
                            </Label>
                        </HBox>

                        <!-- Specifications Grid -->
                        <GridPane hgap="20" vgap="16">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>

                            <!-- Weight -->
                            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label text="Weight" styleClass="field-label">
                                    <font>
                                        <Font size="13" />
                                    </font>
                                </Label>
                                <Label fx:id="weightLabel" text="0.35 kg" styleClass="field-value">
                                    <font>
                                        <Font name="System Bold" size="14" />
                                    </font>
                                </Label>
                            </VBox>

                            <!-- Volume -->
                            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label text="Volume" styleClass="field-label">
                                    <font>
                                        <Font size="13" />
                                    </font>
                                </Label>
                                <Label fx:id="volumeLabel" text="0.002 m³" styleClass="field-value">
                                    <font>
                                        <Font name="System Bold" size="14" />
                                    </font>
                                </Label>
                            </VBox>

                            <rowConstraints>
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>
                    </VBox>

                    <!-- Storage & Alerts Card -->
                    <VBox spacing="20" styleClass="info-card" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <padding>
                            <Insets top="24" right="24" bottom="24" left="24" />
                        </padding>

                        <!-- Card Header -->
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="🌡" styleClass="card-icon">
                                <font>
                                    <Font size="18" />
                                </font>
                            </Label>
                            <Label text="Storage & Alerts" styleClass="card-title">
                                <font>
                                    <Font name="System Bold" size="16" />
                                </font>
                            </Label>
                        </HBox>

                        <!-- Required Temperature -->
                        <VBox spacing="8">
                            <Label text="Required Temperature" styleClass="field-label">
                                <font>
                                    <Font size="13" />
                                </font>
                            </Label>
                            <Label fx:id="temperatureLabel" text="🌡 15°C - 25°C (Room Temperature)" styleClass="temperature-badge">
                                <font>
                                    <Font name="System Bold" size="13" />
                                </font>
                                <padding>
                                    <Insets top="8" right="12" bottom="8" left="12" />
                                </padding>
                            </Label>
                        </VBox>

                        <!-- Days to Alert Before Expiry -->
                        <VBox spacing="8">
                            <Label text="Days to Alert Before Expiry" styleClass="field-label">
                                <font>
                                    <Font size="13" />
                                </font>
                            </Label>
                            <Label fx:id="expiryAlertLabel" text="⚠ N/A (Non-perishable)" styleClass="expiry-badge">
                                <font>
                                    <Font name="System Bold" size="13" />
                                </font>
                                <padding>
                                    <Insets top="8" right="12" bottom="8" left="12" />
                                </padding>
                            </Label>
                        </VBox>
                    </VBox>

                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>