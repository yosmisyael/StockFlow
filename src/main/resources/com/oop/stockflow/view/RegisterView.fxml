                <Text style="-fx-fill: #666;" text="Join DataFlow and get started with your workspace" />

                <!-- Form Fields -->
                <VBox spacing="10" prefWidth="320">
                    <Label text="Full Name" />
                    <TextField fx:id="nameField" promptText="John Doe" />

                    <Label text="Email Address" />
                    <TextField fx:id="emailField" promptText="john@example.com" />

                    <Label text="Password" />
                    <PasswordField fx:id="passwordField" promptText="Enter your password" />

                    <Label text="Confirm Password" />
                    <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" />

                    <Button fx:id="registerButton" text="Sign Up" prefWidth="320"
